@model ShoppingCartViewModel

<h3 class="my-5">
    Shopping cart
</h3>


<div class="row gx-3">
    <div class="col-8">
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <div class="card shopping-cart-card mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/@line.Coffee.ImageThumbnailPath" class="img-fluid rounded-start p-2" alt="@line.Coffee.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-text">@line.Amount x @line.Coffee.Name</h5>
                            <div class="d-flex justify-content-between">
                                <h6>@line.Coffee.ShortDescription</h6>
                                <h2>@line.Coffee.Price.ToString("c")</h2>
                            </div>
                            <div>
                                <a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-coffeeId="@line.Coffee.CoffeeId"> - Remove from cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-4">
        <div class="card shopping-cart-card p-3">
            <div class="row">
                <h4 class="col">Total:</h4>
                <h4 class="col text-end">@Model.ShoppingCartTotal.ToString("c")</h4>
            </div>
            <hr />
            <div class="text-center d-grid">
                <a class="btn btn-secondary" asp-controller="Order" asp-action="Checkout"><h4>Check out now!</h4></a>
            </div>
            <hr />
            <div class="text-center d-grid">
                <a asp-controller="ShoppingCart" asp-action="ClearShoppingCart"><h4>Clear cart</h4></a>
            </div>
        </div>
    </div>
</div>